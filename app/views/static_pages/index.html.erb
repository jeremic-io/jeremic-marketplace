<!-- Rails methods and variables for getting data -->
<% title("Home") %>

<div class="container">
  <div class="row">
    <aside class="col-lg-3 sidebar">
      <ul class="list-group">
        <% @categories.each do |c| %>
          <li class="list-group-item">
            <%= link_to c.title,  "products/" + c.slug %>
          </li>
        <% end %>
      </ul>
    </aside>
  </div>
</div>
